{
  "name": "seneca-edissons",
  "version": "1.1.0",
  "description": "Extend seneca library with additional features",
  "main": "build",
  "scripts": {
    "test": "eslint src && nyc ava && nyc check-coverage --lines 90 --functions 80 --branches 60",
    "coverage": "nyc report --reporter=html && open coverage/index.html",
    "build": "babel src -d build",
    "publish": "npm test && npm run build && npm publish"
  },
  "bin": {
    "seneca-edissons": "./bin/microservice.js"
  },
  "author": "Andrey 'vkfont' Afoninsky",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.8.0",
    "nyc": "^8.3.1",
    "require-dir": "^0.3.1"
  },
  "dependencies": {
    "bluebird": "^3.4.1",
    "bunyan": "^1.8.1",
    "config": "^1.21.0",
    "lodash": "^4.16.4",
    "seneca": "^3.2.1"
  },
  "peerDependencies": {
    "koa": "^2.0.0-alpha.6",
    "require-dir": "^0.3.1",
    "opbeat": "^3.19.1"
  },
  "ava": {
    "verbose": true,
    "source": [
      "units/*js"
    ],
    "require": [
      "./test/_preload.js"
    ]
  },
  "nyc": {
    "include": [
      "src/*.js"
    ]
  }
}
